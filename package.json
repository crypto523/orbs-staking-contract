{
    "name": "orbs-staking-contract",
    "version": "0.1.0",
    "description": "Orbs Staking Smart Contracts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/orbs-network/orbs-staking-contract.git"
    },
    "author": "Orbs",
    "license": "MIT",
    "main": "truffle-config.js",
    "files": [
        "build",
        "contracts",
        "!contracts/tests"
    ],
    "scripts": {
        "test": "scripts/test.sh",
        "coverage": "scripts/coverage.sh",
        "profile": "WITH_GAS_PROFILER=true scripts/test.sh",
        "compile": "./node_modules/.bin/truffle compile",
        "lint": "yarn lint:js && yarn lint:sol",
        "lint:js": "./node_modules/.bin/eslint .",
        "lint:sol": "./node_modules/.bin/solhint --max-warnings 0 \"contracts/**/*.sol\""
    },
    "dependencies": {
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-register": "^6.26.0",
        "openzeppelin-solidity": "2.0.1",
        "truffle": "5.0.34"
    },
    "devDependencies": {
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "babel-preset-stage-3": "^6.24.1",
        "bn.js": "^5.0.0",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "chai-bn": "^0.1.1",
        "chai-change": "^2.1.2",
        "dirty-chai": "^2.0.1",
        "eslint": "^6.3.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.14.3",
        "eth-gas-reporter": "^0.2.11",
        "ganache-cli": "^6.6.0",
        "mocha-lcov-reporter": "^1.3.0",
        "openzeppelin-test-helpers": "^0.4.3",
        "solc": "0.4.26",
        "solhint": "^2.2.0",
        "solidity-coverage": "^0.6.4",
        "truffle-flattener": "^1.4.2"
    }
}
